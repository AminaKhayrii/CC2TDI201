<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSociete">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajouter Socite"
        android:textAlignment="center"
        android:background="#F30A0A"
        android:textColor="@color/white"
        android:textSize="55dp"
        android:id="@+id/view"
        />
    <EditText
        android:layout_below="@+id/view"
        style="@style/zoneTexts"
        android:hint="Tapez le nom de la societe.."
        android:id="@+id/txtNom"
        />
    <EditText
        android:layout_below="@+id/txtNom"
        style="@style/zoneTexts"
        android:hint="Tapez le secteur d'activite.."
        android:id="@+id/txtSecteur"/>
    <EditText
        android:layout_below="@+id/txtSecteur"
        style="@style/zoneTexts"
        android:hint="Tapez le nombre d'employe.."
        android:id="@+id/txtcpt"/>

    <Button
        style="@style/btnActivite"
        android:layout_below="@+id/txtcpt"
        android:text="@string/btnSave"
        android:layout_marginEnd="53dp"
        android:onClick="enregistrer"
        android:id="@+id/btne"/>

    <Button
        style="@style/btnActivite"
        android:layout_below="@+id/txtcpt"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="53dp"
        android:layout_toRightOf="@+id/btne"
        android:text="@string/btnCnacel"
        android:onClick="annuler"
        android:id="@+id/btna"/>



</RelativeLayout>